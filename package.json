{
  "name": "neergaard.dev",
  "version": "1.0.0",
  "description": "",
  "scripts": {
    "start": "concurrently \"yarn scss:watch\" \"yarn pug:watch\" \"yarn scss\"",
    "scss": "node-sass src/assets/scss -o build/assets/css",
    "scss:watch": "node-sass --watch src/assets/scss -o build/assets/css",
    "pug": "pug src/templates --out build",
    "pug:watch": "pug --watch src/templates --out build",
    "copy-assets": "cp --recursive src/assets/images src/assets/cv.pdf build/assets/",
    "build": "yarn scss && yarn pug && yarn copy-assets",
    "clean": "rm --recursive --force build"
  },
  "author": "",
  "license": "ISC",
  "dependencies": {},
  "devDependencies": {
    "concurrently": "^5.3.0",
    "node-sass": "^5.0.0",
    "pug-cli": "^1.0.0-alpha6"
  }
}

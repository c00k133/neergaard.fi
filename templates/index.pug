doctype html
html(lang='en')
  head
    meta(charset='UTF-8')
    meta(name='viewport' content='width=device-width, initial-scale=1')

    title Axel Neergaard

    link(
      rel='stylesheet'
      href='https://fonts.googleapis.com/css?family=Montserrat:300i,400,400i,800&display=swap')

    link(
      rel='stylesheet'
      href='https://use.fontawesome.com/releases/v5.5.0/css/all.css'
      integrity='sha384-B4dIYHKNBt8Bc12p+WXckhzcICo0wtJAoU8YZTY5qE0Id1GSseTk6S+L3BlXeVIU'
      crossorigin='anonymous')
  
    - var files = ['index.css', 'left-side.css', 'right-side.css'] 
    each file in files
      link(rel='stylesheet', href='assets/css/' + file)

  body
    #container
      #card
        #card-content
          include left-side.pug
          include right-side.pug
